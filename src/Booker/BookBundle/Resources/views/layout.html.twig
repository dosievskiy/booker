{% extends 'BookerBookBundle::base.html.twig' %}

{% block login_info %}
    <p id="login">
        {% if current_user %}
            Logged in as: <span style='font-weight:bold'>{{current_user.username}}</span>
                <a href="{{ path('fos_user_security_logout') }}">Logout</a>
        {% else %}
            <a href="{{ path('fos_user_security_login') }}">Login</a>
        {% endif %}    
    </p>
{% endblock %} 